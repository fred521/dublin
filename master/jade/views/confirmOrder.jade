h3 Add New Order


.container-fluid(ng-controller="TablexEditableController")
  .row
    .col-lg-12
      .form-group.mb-xl
        input.form-control.mb(type='text', placeholder="Search products, product, etc.")
        .clearfix
          button.pull-left.btn.btn-default(type="button" ng-click='addProduct()') Add
          .pull-right
            label.checkbox-inline.c-checkbox
              input#inlineCheckbox10(type='checkbox', value='option1', checked)
              span.fa.fa-check
              |  Products
            label.checkbox-inline.c-checkbox
              input#inlineCheckbox20(type='checkbox', value='option2')
              span.fa.fa-check
              |  Users
            label.checkbox-inline.c-checkbox
              input#inlineCheckbox30(type='checkbox', value='option3')
              span.fa.fa-check
              |  Apps
  // Editable row
  h4.page-header List Product

  table.table.table-bordered.table-hover.bg-white
    tr(style='font-weight: bold')
      td(style='width:35%') 产品名称
      td(style='width:20%') 产品数量
      td(style='width:20%') 价格
      td(style='width:20%') Location
      td(style='width:25%') Edit
    tr(ng-repeat='product in products')
      td
        // editable product name (text with validation)
        span(editable-text='product.name', e-name='name', e-form='rowform',  e-required='') {{ product.name || &apos;empty&apos; }}
      td
        // editable  quantity(text with validation)
        span(editable-text='product.quantity', e-name='quantity', e-form='rowform',  e-required='') {{ product.quantity || &apos;empty&apos; }}
      td
        // editable price (select-local)
        span(editable-text='product.price', e-name='price', e-form='rowform',  e-required='') {{ product.price || &apos;empty&apos; }}      
      td
        // editable group (select-local)
        span(editable-select='product.location', e-name='location', e-form='rowform', e-ng-options='s.value as s.text for s in locations') {{ showLocation(product) }}
        //span(editable-select='user.status',      e-name='status',   e-form='rowform', e-ng-options='s.value as s.text for s in statuses')  {{ showStatus(user) }}        
      td(style='white-space: nowrap')
        // form
        form.form-buttons.form-inline(editable-form='', name='rowform', onbeforesave='saveProduct($data, product.id)', ng-show='rowform.$visible', shown='inserted == product')
          button.btn.btn-sm.btn-info(type='submit', ng-disabled='rowform.$waiting', title="Save"): em.fa.fa-save
          button.btn.btn-sm.btn-default(type='button', ng-disabled='rowform.$waiting', ng-click='rowform.$cancel()', title="Cancel"): em.fa.fa-times
        .buttons(ng-show='!rowform.$visible')
          button.btn.btn-sm.btn-info(ng-click='rowform.$show()', title="Edit"): em.fa.fa-pencil
          button.btn.btn-sm.btn-danger(ng-click='removeProduct($index)', title="Delete"): em.fa.fa-trash
  .row
    .col-lg-12
      .form-group.mb-xl
